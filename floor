--[[ floor v1.0.1
	長方形の床貼りプログラム。

	Author: Igaguri (2015)
]]

assert(os.loadAPI("/lib/apiloader"), "Can't load apiloader.")

apiloader.load("movement")

---- main ----

-- 引数処理
local args = {...}

assert(#args >= 2, 	"ERROR: There are too few arguments. \n"
					.. " floor <length> <width> \n")

local length = tonumber(args[1])
local width = tonumber(args[2])

-- まず偶数分は往復しながら置く
while length >= 2 do
	turtle.turnRight()
	movement.putLine(width)

	turtle.turnLeft()
	movement.force.forward()
	turtle.turnLeft()
	movement.putLine(width)
	turtle.turnRight()
	movement.force.forward()

	length = length - 2
end

-- 奇数の時は残りを置く
if length == 1 then
	turtle.turnRight()
	movement.putLine(width)
	turtle.turnLeft()
end

-- 回収のために少し下がる。
turtle.back()
turtle.back()