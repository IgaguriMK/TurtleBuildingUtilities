local args = {...}

assert(os.loadAPI("/lib/apiloader"), "EROOR: Cannot Load LoadAPI.\n")

apiloader.load("/lib/tfg")

local length = 5

if #args >= 1 then
	length = math.floor(args[1]/2)
end

local function pd()
	turtle.digUp()
	turtle.digDown()
	turtle.placeDown()
end

local function pf()
	turtle.dig()
	turtle.place()
end

local function f()
	turtle.dig()
	turtle.forward()
end

local function u()
	turtle.digUp()
	turtle.up()
end

for i = 1, length do
	tfg.itemCollect(1)
	turtle.turnLeft()
	pf()
	turtle.turnRight()
	turtle.turnRight()
	pd()
	f()
	pd()
	f()
	pd()
	pf()
	turtle.turnLeft()
	f()
	u()
	turtle.turnRight()
	pf()
	turtle.turnLeft()
	turtle.turnLeft()
	pd()
	f()
	pd()
	f()
	pd()
	pf()
	turtle.turnRight()
	f()
	u()
end
turtle.turnRight()
turtle.turnRight()
turtle.forward()
turtle.down()
turtle.forward()
turtle.down()
