local args = {...}

assert(os.loadAPI("/lib/apiloader"), "Can't load apiloader.")

apiloader.load("tfg")
apiloader.load("movement")


local length = 3
local width = 5

if #args >= 1 then
	length = tonumber(args[1])
end

if #args >= 2 then
	width = tonumber(args[2])
end


while length >= 2 do
	tfg.itemCollect(1)
	movement.putLine(width)

	movement.force.forward()
	turtle.turnLeft()		
	movement.force.forward()
	turtle.turnLeft()		

	movement.putLine(width)

	turtle.turnRight()
	movement.force.forward()
	turtle.turnRight()
	movement.force.forward()

	length = length - 2
end

if length == 1 then
	movement.doLine(width, turtle.placeDown)
end
