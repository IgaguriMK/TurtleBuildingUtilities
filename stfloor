local args = {...}

function loadFile(file)
  if os.loadAPI(file) then
    return true
  else
    print (file.." : Can't load API!!")
    return false
  end 
end

loadFile("tfg")

local length = 5

if #args >= 1 then
	length = math.floor(args[1]/2)
end

local function pd()
	turtle.digUp()
	turtle.digDown()
	turtle.placeDown()
end

local function pf()
	turtle.dig()
	turtle.place()
end

local function f()
	turtle.dig()
	turtle.forward()
end

for i = 1, length do
	tfg.itemCollect(1)
	turtle.turnLeft()
	pf()
	turtle.turnRight()
	turtle.turnRight()
	pd()
	f()
	pd()
	f()
	pd()
	pf()
	turtle.turnLeft()
	f()
	turtle.turnRight()
	pf()
	turtle.turnLeft()
	turtle.turnLeft()
	pd()
	f()
	pd()
	f()
	pd()
	pf()
	turtle.turnRight()
	f()
end

turtle.turnRight()
turtle.turnRight()
turtle.forward()
turtle.forward()